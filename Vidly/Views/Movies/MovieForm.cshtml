@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = ViewData["Message"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (@Html.BeginForm("Save", "Movies"))
{
    
    @Html.ValidationSummary(true, "Please correct the errors before continuing.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name )
        @Html.TextBoxFor(m => m.Name, new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.Name )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })  @* If I want to display a default value, , , @Value = Model.ReleaseDate*@
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres,"Id","Name"), null , new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" }) @* , @Value = "0" *@
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Id)
     
    @Html.AntiForgeryToken()
    
    <button type="submit" class="btn btn-primary">Save</button>
}


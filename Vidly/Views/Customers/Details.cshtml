@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@Html.LabelFor(m => m.MembershipType): @Model.MembershipType.Name </li>
    @if (Model.BirthDate.HasValue)
    {
        <li>@Html.LabelFor(m => m.BirthDate): @Model.BirthDate.Value.ToShortDateString() </li>
    }
    
</ul>

